# Environment Variables Template
# Copy to .env and fill in your values

# Domain Configuration
DOMAIN=yourdomain.com

# User/Group IDs (run 'id' command to find yours)
PUID=1000
PGID=1000
TZ=America/New_York

# Cloudflare Configuration (for SSL certificates)
CF_API_EMAIL=your-email@yourdomain.com
CF_DNS_API_TOKEN=your-cloudflare-token

# Database Configuration
PG_PASS=your-secure-postgresql-password

# Authentik Configuration  
AUTHENTIK_SECRET_KEY=your-long-random-secret-key-here

# API Keys (generate in each app's settings)
SONARR_API_KEY=your-sonarr-api-key
RADARR_API_KEY=your-radarr-api-key

# Media Paths
TV_PATH=/path/to/your/tv/shows
MOVIES_PATH=/path/to/your/movies
DOWNLOADS_PATH=/path/to/your/downloads
